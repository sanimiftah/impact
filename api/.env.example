# Environment Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=1.0.0
API_BASE_URL=http://localhost:3001

# Database Configuration (when you add a database)
# DATABASE_URL=mongodb://localhost:27017/impact-platform
# REDIS_URL=redis://localhost:6379

# Firebase Configuration (optional)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# External APIs (for future integrations)
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# SENDGRID_API_KEY=your-sendgrid-key
# SLACK_WEBHOOK_URL=your-slack-webhook

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Monitoring
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
